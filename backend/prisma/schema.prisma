// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hero {
  id                 String       @id @default(uuid())
  real_name          String
  nickname           String
  origin_description String
  superpowers        Superpower[] @relation("hero_superpower")
  images             Image[]      @relation("hero_image")
  catch_phrase       String       @default("No catch phrase")
}

model Superpower {
  id         String @id @default(uuid())
  superpower String @unique
  hero       Hero[] @relation("hero_superpower")
}

model Image {
  id       String @id @default(uuid())
  imageUrl String @unique
  hero     Hero   @relation("hero_image", fields: [heroId], references: [id])
  heroId   String
}
